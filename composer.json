{
    "name": "utyemma/notifire",
    "description": "Create Dynamic Email Messages using Laravel's Notification system",
    "license": "MIT",
    "keywords": ["Notifire", "Notification", "Laravel Notification"],
    "authors": [
        {
            "name": "Utibe-Abasi Emmanuel",
            "email": "utyemma@gmail.com",
            "homepage": "https://utyemma.vercel.app",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/UtyEmma/notifire",
    "require": {
        "php": ">=8.1",
        "mustache/mustache": "^2.14"
    },
    "require-dev": {
        "orchestra/testbench": "^8.21"
    },
    "autoload": {
        "psr-4": {
            "Utyemma\\Notifire\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Utyemma\\Notifire\\NotifireServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
